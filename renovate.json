{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 100,
  "regexManagers": [
    {
      "description": "maven-jib",
      "fileMatch": [
        "(^|/)pom.xml$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "<from>\\s*<image>\\s*(?<depName>.*?):(?<currentValue>.*?)@?(?<currentDigest>(sha256:[a-f0-9]+)?)\\s*<\/image>\\s*<\/from>"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
