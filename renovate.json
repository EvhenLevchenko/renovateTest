{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["org.springframework.boot"],
      "enabled": true
    },
    {
      "matchManagers": ["docker"]
    }
  ]
}
